# enable color support for `ls` and also add handy aliases
alias ls='gls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'


# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias lh='ls -lh'


# Linux version of OSX pbcopy and pbpaste.
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'


alias python=python3

# games
alias tetris=/snap/bin/tetris-thefenriswolf.tetris # add to .bashrc or .zshrc etc.

# globe
alias globe="$HOME/.cargo/bin/globe"

# git
alias gc='git checkout'
alias gs='git status'
alias gb='git branch'

alias nate="git pull"

# conveniences
alias n="nvim"

alias claude='claude --plugin-dir ~/Desktop/code/claude-dotfiles'
